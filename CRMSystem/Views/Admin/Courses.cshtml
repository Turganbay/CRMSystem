<div>
    <div class="divList">
        <table class="table table-hover">
            <tr>
                <td><b>ID</b></td>
                <td><b>NAME</b></td>
                <td><b>DESCRIPTION</b></td>
                <td><b>ACTION</b></td>
            </tr>
            <tr ng-repeat="course in courses">
                <td>{{course.id}}</td>
                <td>{{course.name}}</td>
                <td>{{course.description}}</td>
                <td>
                    <span ng-click="editCourse(course)" class="btn btn-primary">Edit</span>
                    <span ng-click="deleteCourse(course)" class="btn btn-danger">Delete</span>
                </td>
            </tr>
        </table>
    </div>

    <span ng-click="AddCourseDiv()" class="btn btn-default">
        Add Course
    </span>

    <div ng-show="divCourse">
        <p class="divHead"></p>
        <table class="table">
            <tr>
                <td><b><i>{{Action}} Course</i></b></td>
                <td></td>
            </tr>
            <tr>
                <td><b>Id</b></td>
                <td>
                    <input type="text" disabled="disabled" ng-model="courseId" />
                </td>
            </tr>
            <tr>
                <td><b>Title</b></td>
                <td>
                    <input type="text" ng-model="courseName" />
                </td>
            </tr>
            <tr>
                <td><b>Description</b></td>
                <td>
                    <textarea ng-model="courseDescription"></textarea>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="button" class="btn btn-default" value="Save" ng-click="AddUpdateCourse()" />
                    <input type="button" class="btn btn-danger" value="Cancel" ng-click="Cancel()" />
                </td>
            </tr>
        </table>
    </div>
</div>
