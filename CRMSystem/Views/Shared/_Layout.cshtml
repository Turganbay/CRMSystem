<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body ng-app="CRMSystem">

    <!-- Navigation -->
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" ui-sref="#">CRM System</a>
        </div>
        <ul class="nav navbar-nav">
            <li><a ui-sref="events">Events</a></li>
            <li ng-show="!username"><a ui-sref="login">Login</a></li>
            <li ng-show="username"><a ui-sref="logout">Logout</a></li>
            <li ng-show="userRole > 1"><a ui-sref="admin">Admin</a></li>
        </ul>
    </nav>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="~/signalr/hubs"></script>
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularuiroute")
    @Scripts.Render("~/bundles/angularfilter")
    @Scripts.Render("~/bundles/CRMSystemsScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
